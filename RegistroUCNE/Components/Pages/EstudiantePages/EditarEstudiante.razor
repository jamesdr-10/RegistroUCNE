@page "/editar-estudiante/{EstudianteId:int}"
@attribute [Authorize(Roles = "Administrador,Registrador")]
@rendermode InteractiveServer

@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject EstudianteService estudianteService
@inject NavigationManager Navigation

<PageTitle>Editar Estudiante</PageTitle>

@if (estudianteNoEncontrado)
{
    <div class="container">
        <div class="alert alert-danger text-center shadow">
            <h4 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Estudiante no encontrado
            </h4>

            <p>El estudiante que intenta editar no existe o fue eliminado.</p>
            <hr />

            <a href="/listado-estudiantes" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i> Volver al listado
            </a>
        </div>
    </div>
}
else
{
    <EditForm Model="estudiante" OnValidSubmit="MostrarModalConfirmacion">
        <DataAnnotationsValidator />

        <div class="container">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h4 class="card-title"><strong>Editar Estudiante</strong></h4>
                </div>

                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label"><strong>Nombres</strong></label>
                        <InputText class="form-control" @bind-Value="estudiante.Nombres" placeholder="Ingrese los nombres" />
                        <ValidationMessage For="(() => estudiante.Nombres)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><strong>Apellidos</strong></label>
                        <InputText class="form-control" @bind-Value="estudiante.Apellidos" placeholder="Ingrese los apellidos" />
                        <ValidationMessage For="(() => estudiante.Apellidos)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><strong>Dirección</strong></label>
                        <InputText class="form-control" @bind-Value="estudiante.Direccion" placeholder="Ingrese la dirección" />
                        <ValidationMessage For="(() => estudiante.Direccion)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><strong>Correo</strong></label>
                        <InputText class="form-control" @bind-Value="estudiante.Correo" placeholder="Ingrese el correo" />
                        <ValidationMessage For="(() => estudiante.Correo)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><strong>Teléfono</strong></label>
                        <InputText class="form-control" @bind-Value="estudiante.Telefono" placeholder="Ingrese el teléfono"
                            oninput="formatTelefono(event)" />
                        <ValidationMessage For="(() => estudiante.Telefono)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><strong>Matrícula</strong></label>
                        <InputText class="form-control" @bind-Value="estudiante.Matricula" placeholder="Ingrese la matrícula" />
                        <ValidationMessage For="(() => estudiante.Matricula)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><strong>Carrera</strong></label>
                        <InputText class="form-control" @bind-Value="estudiante.Carrera" placeholder="Ingrese la carrera" />
                        <ValidationMessage For="(() => estudiante.Carrera)" />
                    </div>

                    <div class="form-check mb-3">
                        <InputCheckbox class="form-check-input" @bind-Value="estudiante.EsEgresado" />
                        <label class="form-check-label">Es Egresado</label>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMensaje))
                    {
                        <div class="error-message-container">
                            <div class="error-message">
                                <i class="bi bi-exclamation-circle-fill me-2"></i> @errorMensaje
                            </div>
                        </div>
                    }
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-center">
                        <a href="/listado-estudiantes" class="btn btn-secondary me-2">
                            <span class="bi bi-arrow-left me-2"></span> Volver
                        </a>

                        <button class="btn btn-success" type="submit" disabled="@estaCargando">
                            
                            @if (estaCargando)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Guardando...</span>
                            }
                            else
                            {
                                <span class="bi bi-save me-2"></span>
                                <span>Guardar</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
}

@if (mostrarModalConfirmacion)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-success">
                <div class="modal-header bg-success text-white">

                    <h5 class="modal-title">
                        <i class="bi bi-shield-lock-fill me-2"></i> Confirmar Edición
                    </h5>

                    <button class="btn-close btn-close-white" @onclick="CerrarModalConfirmacion"></button>
                </div>

                <div class="modal-body">
                    <p>Para confirmar la edición, ingrese su contraseña: </p>

                    <div class="mb-3">
                        <label class="form-label"><strong>Contraseña</strong></label>
                        <input type="password" class="form-control" @bind="passwordConfirmacion" placeholder="Ingrese su contraseña" />
                    </div>

                    @if (!string.IsNullOrEmpty(errorConfirmacion))
                    {
                        <div class="text-danger">
                            <i class="bi bi-exclamation-circle me-2"></i>@errorConfirmacion
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalConfirmacion">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>

                    <button class="btn btn-success" @onclick="ConfirmarGuardar">
                        <i class="bi bi-check-circle"></i> Confirmar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int EstudianteId { get; set; }

    private Estudiante estudiante = new();

    private string? errorMensaje;
    private string? errorConfirmacion;
    private string passwordConfirmacion = string.Empty;

    private bool estaCargando = false;
    private bool estudianteNoEncontrado = false;
    private bool mostrarModalConfirmacion = false;

    protected override async Task OnInitializedAsync()
    {
        estudiante = await estudianteService.Buscar(EstudianteId);
        
        if (estudiante == null)
        {
            estudianteNoEncontrado = true;
            return;
        }
    }

    private void MostrarModalConfirmacion()
    {
        errorConfirmacion = null;
        passwordConfirmacion = string.Empty;
        mostrarModalConfirmacion = true;
    }

    private void CerrarModalConfirmacion()
    {
        mostrarModalConfirmacion = false;
    }

    private async Task ConfirmarGuardar()
    {
        errorMensaje = null;
        errorConfirmacion = null;

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        var identityUser = await UserManager.GetUserAsync(user);

        if (identityUser is null)
        {
            errorConfirmacion = "No se pudo identificar al usuario actual.";
            return;
        }

        if (!await UserManager.CheckPasswordAsync(identityUser, passwordConfirmacion))
        {
            errorConfirmacion = "La contraseña no coincide.";
            return;
        }

        estaCargando = true;

        if (await estudianteService.Guardar(estudiante))
        {
            Navigation.NavigateTo("/ucne/registro-estudiantes");
        }
        else
        {
            errorMensaje = "Error al guardar el estudiante. Intente nuevamente.";
        }

        estaCargando = false;
        mostrarModalConfirmacion = false;
    }
}

@* Funcion para que escriba los guiones solo con Js *@
<script>
    function formatTelefono(e) {
        let v = e.target.value.replace(/\D/g, "");

        if (v.length > 3 && v.length <= 6)
            e.target.value = v.slice(0, 3) + "-" + v.slice(3);
        else if (v.length > 6)
            e.target.value = v.slice(0, 3) + "-" + v.slice(3, 6) + "-" + v.slice(6, 10);
        else
            e.target.value = v;
    }
</script>
