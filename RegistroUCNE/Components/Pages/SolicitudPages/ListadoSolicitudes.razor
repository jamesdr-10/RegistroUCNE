@page "/listado-solicitudes"
@attribute [Authorize(Roles = "Administrador,Registrador")]
@rendermode InteractiveServer

@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ConfiguracionSistemaService configuracionService
@inject SolicitudDocumentoService solicitudService
@inject TipoDocumentoService tipoDocumentoService

<PageTitle>Listado de Solicitudes</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header">
            <h5 class="card-title"><strong>Listado de Solicitudes</strong></h5>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-md-end mb-3">
                <a href="/crear-solicitud" class="btn btn-primary bi bi-file-plus">
                    Crear Solicitud
                </a>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-3">
                    <label class="form-label"><strong>Tipo de Documento</strong></label>
                    <InputSelect class="form-select" @bind-Value="filtroTipoDoc">
                        <option value="">Todos</option>
                        @foreach (var tipo in tiposDocumentos)
                        {
                            <option value="@tipo.Nombre">@tipo.Nombre</option>
                        }
                    </InputSelect>
                </div>

                <div class="col-md-3">
                    <label class="form-label"><strong>Estado</strong></label>
                    <InputSelect class="form-select" @bind-Value="filtroEstado">
                        <option value="">Todos</option>
                        <option value="Iniciado">Iniciado</option>
                        <option value="En Proceso">En Proceso</option>
                        <option value="Finalizado">Finalizado</option>
                    </InputSelect>
                </div>

                <div class="col-md-3">
                    <label class="form-label"><strong>Desde</strong></label>
                    <InputDate class="form-control" @bind-Value="fechaDesde" />
                </div>

                <div class="col-md-3">
                    <label class="form-label"><strong>Hasta</strong></label>
                    <InputDate class="form-control" @bind-Value="fechaHasta" />
                </div>

                <div class="col-md-4">
                    <label class="form-label"><strong>Buscar (Tipo o Estudiante)</strong></label>
                    <InputText class="form-control" placeholder="Ej: Acta o Juan Pérez" @bind-Value="textoBusqueda" />
                </div>

                <div class="col-md-5 d-flex align-items-end">
                    <div class="form-check">
                        <InputCheckbox class="form-check-input" @bind-Value="mostrarSoloMios" />
                        <label class="form-check-label"><strong>Solo mis documentos</strong></label>
                    </div>
                </div>

                <div class="col-md-3 d-flex align-items-end justify-content-md-end">
                    <button class="btn btn-secondary w-100" @onclick="LimpiarFiltros">
                        <i class="bi bi-x-circle"></i> Limpiar filtros
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Tipo de Documento</th>
                            <th>Estudiante</th>
                            <th>Estado</th>
                            <th>Fecha de Solicitud</th>
                            <th>Fecha de Finalización</th>
                            <th>Fecha de Entrega</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!solicitudesFiltradas.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center">No se han encontrado documentos.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var solicitud in solicitudesPaginadas)
                            {
                                var alertaHash = configuracion.RequiereArchivoConHash
                                && solicitud.EstadoProceso == "Finalizado"
                                && (
                                    solicitud.DocumentoFinal == null
                                    || !solicitud.DocumentoFinal.Activo
                                    || string.IsNullOrWhiteSpace(solicitud.DocumentoFinal.RutaR2)
                                    || string.IsNullOrWhiteSpace(solicitud.DocumentoFinal.HashSha256)
                                );

                                <tr class="text-center @(alertaHash ? "table-warning" : "")">
                                    <td>@solicitud.SolicitudDocumentoId</td>
                                    <td>
                                        @solicitud.TipoDocumento!.Nombre
                                        @if (solicitud.TipoDocumentoId == 15 && !string.IsNullOrWhiteSpace(solicitud.DescripcionAdicional))
                                        {
                                            <span> - @solicitud.DescripcionAdicional</span>
                                        }
                                    </td>
                                    <td>@solicitud.Estudiante!.Nombres @solicitud.Estudiante.Apellidos</td>
                                    <td>
                                        @if (alertaHash)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-exclamation-triangle-fill"></i> Falta Hash/PDF
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="@ObtenerClaseEstado(solicitud.EstadoProceso)">
                                                @solicitud.EstadoProceso
                                            </span>
                                        }
                                    </td>
                                    <td>@solicitud.FechaSolicitudLocal.ToString("dd/MM/yyyy")</td>
                                    <td>@(solicitud.FechaFinalizadoLocal?.ToString("dd/MM/yyyy") ?? "Pendiente")</td>
                                    <td>@(solicitud.FechaEntregaLocal?.ToString("dd/MM/yyyy") ?? "Pendiente")</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/ver-solicitud/@solicitud.SolicitudDocumentoId" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <a href="/editar-solicitud/@solicitud.SolicitudDocumentoId" class="btn btn-edit btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <AuthorizeView Roles="Administrador">
                                                <button type="button" class="btn btn-danger btn-sm"
                                                        @onclick="@(() => SeleccionarSolicitud(solicitud))">
                                                    <i class="bi bi-file-lock"></i>
                                                </button>
                                            </AuthorizeView>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (!string.IsNullOrEmpty(errorMensaje))
            {
                <div class="error-message-container">
                    <div class="error-message">
                        <i class="bi bi-exclamation-circle-fill me-2"></i> @errorMensaje
                    </div>
                </div>
            }
        </div>

        <div class="card-footer">
            <div class="mb-3">
                <small class="text-muted">
                    Mostrando <strong>@solicitudesPaginadas.Count()</strong> de 
                    <strong>@solicitudesFiltradas.Count()</strong> resultados — 
                    Total: <strong>@solicitudes.Count</strong> solicitudes
                </small>
            </div>

            @if (totalPaginas > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center flex-wrap mb-0">
                        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="PrimeraPagina">« Primera</button>
                        </li>

                        <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="PaginaAnterior">‹ Anterior</button>
                        </li>

                        <li class="page-item disabled">
                            <span class="page-link">Página @paginaActual de @totalPaginas</span>
                        </li>

                        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                            <button class="page-link" @onclick="PaginaSiguiente">Siguiente ›</button>
                        </li>

                        <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                            <button class="page-link" @onclick="UltimaPagina">Última »</button>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@if (mostrarModalDeshabilitar)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);"">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-danger">

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Deshabilitación
                    </h5>

                    <button class="btn-close btn-close-white" @onclick="CerrarModalDeshabilitar"></button>
                </div>

                <div class="modal-body">
                    <p>¿Está seguro de que desea deshabilitar esta solicitud?</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>ID:</strong> <span class="badge bg-secondary">@solicitudSeleccionada?.SolicitudDocumentoId</span></li>
                        <li class="list-group-item"><strong>Tipo de Documento:</strong> <span class="badge bg-primary">@solicitudSeleccionada?.TipoDocumento!.Nombre</span></li>
                        <li class="list-group-item"><strong>Estudiante:</strong> <span class="badge bg-primary">@solicitudSeleccionada?.Estudiante!.Nombres @solicitudSeleccionada?.Estudiante!.Apellidos</span></li>
                        <li class="list-group-item"><strong>Estado:</strong> <span class="badge bg-secondary">@solicitudSeleccionada?.EstadoProceso</span></li>
                        <li class="list-group-item"><strong>Fecha de Solicitud:</strong> <span class="badge bg-info">@solicitudSeleccionada?.FechaSolicitudLocal.ToString("dd/MM/yyyy")</span></li>
                    </ul>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalDeshabilitar">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>

                    <button class="btn btn-danger" @onclick="Deshabilitar">
                        <i class="bi bi-trash"></i> Deshabilitar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private int registradorActualId;

    private ConfiguracionSistema configuracion = new();
    private List<SolicitudDocumento> solicitudes = new();
    private List<SolicitudDocumento> solicitudesRegistrador = new();
    private List<TipoDocumento> tiposDocumentos = new();
    private SolicitudDocumento? solicitudSeleccionada;

    private string filtroTipoDoc = "";
    private string filtroEstado = "";
    private DateTime? fechaDesde;
    private DateTime? fechaHasta;
    private string textoBusqueda = "";
    private bool mostrarSoloMios = true;

    private string? errorMensaje;

    private int paginaActual = 1;
    private int tamanoPagina = 10;
    private int totalPaginas => Math.Max(1, (int)Math.Ceiling((double)solicitudesFiltradas.Count() / tamanoPagina));

    private bool mostrarModalDeshabilitar = false;

    private IEnumerable<SolicitudDocumento> solicitudesFiltradas => (mostrarSoloMios ? solicitudesRegistrador : solicitudes)
        .Where(d =>
            (string.IsNullOrEmpty(filtroTipoDoc) || d.TipoDocumento!.Nombre.Contains(filtroTipoDoc, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(filtroEstado) || d.EstadoProceso.Equals(filtroEstado, StringComparison.OrdinalIgnoreCase)) &&
            (!fechaDesde.HasValue || d.FechaSolicitudLocal.Date >= fechaDesde.Value.Date) &&
            (!fechaHasta.HasValue || d.FechaSolicitudLocal.Date <= fechaHasta.Value.Date) &&
            (string.IsNullOrEmpty(textoBusqueda)
                || d.TipoDocumento!.Nombre.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase)
                || (d.Estudiante!.Nombres + " " + d.Estudiante.Apellidos)
                    .Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase))
        )
        .OrderByDescending(d => d.FechaSolicitudLocal);

    private IEnumerable<SolicitudDocumento> solicitudesPaginadas => solicitudesFiltradas
        .Skip((paginaActual - 1) * tamanoPagina)
        .Take(tamanoPagina);

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user != null)
        {
            registradorActualId = user.Id;
        }

        configuracion = await configuracionService.Obtener();

        solicitudes = await solicitudService.Listar(d => d.Activo == true);

        solicitudesRegistrador = solicitudes
            .Where(sd => sd.TrabajosRegistrador
                .Any(tr => tr.RegistradorId == registradorActualId) && sd.Activo == true)
            .ToList();

        tiposDocumentos = await tipoDocumentoService.Listar();
    }

    private async Task Deshabilitar()
    {
        errorMensaje = null;

        if (solicitudSeleccionada != null && await solicitudService.Deshabilitar(solicitudSeleccionada.SolicitudDocumentoId))
        {
            solicitudes = await solicitudService.Listar(d => d.Activo == true);
            solicitudesRegistrador = solicitudes
                .Where(sd => sd.TrabajosRegistrador
                .Any(dr => dr.RegistradorId == registradorActualId) && sd.Activo == true)
                .ToList();

            CerrarModalDeshabilitar();
        }
        else
        {
            errorMensaje = "Error al deshabilitar la solicitud. Intente nuevamente.";
        }
    }

     private void CerrarModalDeshabilitar()
    {
        mostrarModalDeshabilitar = false;
        solicitudSeleccionada = null;
    }

    private void SeleccionarSolicitud(SolicitudDocumento solicitud)
    {
        mostrarModalDeshabilitar = true;
        solicitudSeleccionada = solicitud;
    }

    private void LimpiarFiltros()
    {
        filtroTipoDoc = "";
        filtroEstado = "";
        fechaDesde = null;
        fechaHasta = null;
        textoBusqueda = "";
        mostrarSoloMios = true;
        paginaActual = 1;
    }

    private string ObtenerClaseEstado(string estado)
    {
        return estado switch
        {
            "Iniciado" => "badge bg-secondary",
            "En Proceso" => "badge bg-warning text-dark",
            "Finalizado" => "badge bg-success",
            _ => "badge bg-secondary"
        };
    }

    private void PrimeraPagina() => paginaActual = 1;
    private void PaginaAnterior() { if (paginaActual > 1) paginaActual--; }
    private void PaginaSiguiente() { if (paginaActual < totalPaginas) paginaActual++; }
    private void UltimaPagina() => paginaActual = totalPaginas;
}
